<form action="/addShoppingCart" method="POST">
    <div class="form-group">
        <label for="item" class="l-bold">Item: </label>
        <input type="text" class="form-control" name="item" id="item" placeholder="Please enter an item" required>
    </div>        
    <div class="form-group">
        <label for="qty" class="l-bold">Quantity: </label>
        <input type="number" class="form-control" name="qty" id="qty" placeholder="Please enter the qty" required>
    </div>
    <div class="form-group">
        <label for="unitPrice" class="l-bold">Unit Price: </label>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <input type="text" class="form-control" name="unitPrice" aria-label="Amount (to the nearest dollar)" required>
            <div class="input-group-append">
                <span class="input-group-text">.00</span>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-end">
        <button class="btn-lg btn-success">Add to CART</button>
    </div>   

    <input type="hidden" name="cartState" value="{{ cartState }}">
</form>
<table class="table table-dark mt-4">
    <thead>
        <tr>
            <th>No.</th>
            <th>Item</th>
            <th>Qty</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        {{#each shoppingCart}}
            <tr>
                <th>{{this.no}}</th>
                <td>{{this.item}}</td>
                <td>{{this.qty}}</td>
                <td>{{this.price}}</td>
            </tr>
        {{/each}}
    </tbody>
</table>